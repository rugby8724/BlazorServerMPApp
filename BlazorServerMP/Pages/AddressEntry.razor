@page "/addresses"

<h3>AddressEntry</h3>

<EditForm Model="model" OnValidSubmit="ValidSubmit">
    <DataAnnotationsValidator />
    <ValidationSummary />

    <InputText @bind-Value="model.StreetAddress" placeholder="StreedAddress" class="form-control" />
    <InputText @bind-Value="model.City" placeholder="City" class="form-control" />
    <InputText @bind-Value="model.State" placeholder="State" class="form-control" />
    <InputText @bind-Value="model.ZipCode" placeholder="ZipCode" class="form-control" />

    <button class="btn btn-primary" type="submit">Add</button>

</EditForm>

<h3>Addresses</h3>

<ul>
    @foreach (var address in addresses)
    {
        <li>@address.StreetAddress, @address.City, @address.State @address.ZipCode</li>     
    }
</ul>

@code {
    private AddressModel model = new();
    private List<AddressModel> addresses = new();

    private void ValidSubmit()
    {
        addresses.Add(model);
        model = new();

    }
}
